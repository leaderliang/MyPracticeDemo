<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.leaderliang.myapplication.MainActivity">

    <com.leaderliang.myapplication.view.PercentView
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <com.leaderliang.myapplication.view.PercentView
        android:layout_width="300dp"
        android:layout_height="200dp" />

    <Button android:id="@+id/bt_open_app_activity" android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:text="跨 app 启动 Activity" android:textSize="16sp"
        android:layout_gravity="center"
        android:gravity="center_vertical|center"
        />


</LinearLayout>
