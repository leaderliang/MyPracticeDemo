<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/rl_item">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/ll_left"
                  android:layout_marginRight="5dp">


        <ImageView android:id="@+id/iv_flag_icon_left" android:layout_width="25dp"
                   android:layout_height="20dp" android:layout_gravity="center"
                   android:src="@mipmap/ic_launcher"/>
        <TextView android:id="@+id/tv_flag_left" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="1" android:layout_gravity="center"
                  android:textSize="10sp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/ll_right" android:layout_marginLeft="5dp">


        <ImageView android:id="@+id/iv_flag_icon_right" android:layout_width="25dp"
                   android:layout_height="20dp" android:layout_gravity="center"
                   android:src="@mipmap/ic_launcher"/>
        <TextView android:id="@+id/tv_flag_right" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="2" android:layout_gravity="center"
                  android:textSize="10sp"/>

    </LinearLayout>
</LinearLayout>