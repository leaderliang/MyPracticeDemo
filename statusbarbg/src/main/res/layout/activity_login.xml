<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photographer_riv"
            style="@style/layout_ww"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_24dp"

            android:scaleType="fitCenter"
            android:src="@drawable/login_touxiang_icon_weishangchuan" />

        <EditText
            android:id="@+id/account_et"
            style="@style/input_edit_style"
            android:layout_marginTop="33dp"
            android:hint="@string/input_account_hint" />

        <ImageView
            style="@style/divide_line"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginTop="11dp" />

        <EditText
            android:id="@+id/pwd_et"
            style="@style/input_edit_style"
            android:layout_marginTop="33dp"
            android:hint="@string/input_account_hint" />

        <ImageView
            style="@style/divide_line"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginTop="11dp" />

        <Button
            style="@style/bottom_btn_style"
            android:layout_marginTop="25dp"
            android:onClick="loginBtnClick"
            android:text="@string/login" />


    </LinearLayout>
</layout>